{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "outDir": "./build",
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
